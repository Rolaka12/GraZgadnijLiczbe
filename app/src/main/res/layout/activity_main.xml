<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zgadnij liczbe"
        android:textSize="50dp"
        android:textColor="#FF0000"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/wpisanaLiczbaTekst"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="number"
        android:hint="Podaj liczbe 1-100" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SprawdÅº"
            android:onClick="Sprawdz"
            android:layout_margin="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:onClick="Reset"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/liczbaProb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liczba prob: 0"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/najlepszyWynik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Najlepszy wynik: "
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>


</LinearLayout>